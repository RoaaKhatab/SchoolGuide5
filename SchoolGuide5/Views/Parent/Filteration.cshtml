
@model IEnumerable<SchoolGuide5.Models.Schools>
    @{
    ViewBag.Title = "Filteration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Filteration</h2>


<br />
<br />
@using (Html.BeginForm("Filteration", "Parent", FormMethod.Get))
{
    <div>
        School Category @Html.TextBox("SchoolCategory")
        School Fees From @Html.TextBox("SchoolFeesFrom")
        School Fees To @Html.TextBox("SchoolFeesTo")
        School Location @Html.TextBox("SchoolLocation")




        <input id="submit4" type="submit" value="Search" />







    </div>

    <table class="table table-striped">
        <thead>
            <tr>

                <th>School Name</th>
                <th>Details</th>


            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3">
                        No match item
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Sc_Name</td>


                        <td> @Html.ActionLink("Show Details", "Details","Schools", new { id = item.Sc_id }, FormMethod.Get)</td>

                    </tr>
                }
            }
        </tbody>
    </table>







}







