@model SchoolGuide5.Models.Comment
@{


    ViewBag.Title = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section id="mu-testimonial" style=" background-image: url('../../Content/img/mine/comment.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-testimonial-area">
                    <div id="mu-testimonial-slide" class="mu-testimonial-content">
                        <!-- start testimonial single item -->
                        <div class="mu-testimonial-item">
                            @using (Html.BeginForm("AddComment", "Schools", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">


                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">

                                        <div class="rateyo" id="RateStars" style="margin-left: 250px; "></div>
                                        @Html.HiddenFor(x => x.Rating, new { id = "RateStarsValue" })

                                        @*@Html.LabelFor(model => model.C_Details, htmlAttributes: new { @class = "control-label col-md-2" })*@

                                        <div class="col-md-10" style="margin-left:200px; width:500px">
                                            <h2 style="padding-top: 50px; color:black ">Add your comment here.</h2>

                                            @Html.EditorFor(model => model.C_Details, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.C_Details, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success" style="margin-left:350px; margin-bottom:50px">Add Comment</button>
                                    <div>
                                        @Html.HiddenFor(m => m.School_id)
                                        @Html.HiddenFor(m => m.UserId)
                                        @Html.HiddenFor(m => m.Username)
                                    </div>

                                </div>
                            }


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







