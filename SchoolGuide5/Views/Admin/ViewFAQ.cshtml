@model IEnumerable<SchoolGuide5.Models.FAQ>

@{
    ViewBag.Title = "ViewFAQ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Start Title -->

<div>
    <h1 style="font-family:sans-serif; font-size:60px; margin-left:400px;color:#59a1d7">School guide help center!</h1>
</div>


<br /><br />
@foreach (var item in Model)
{

    <h2 style="margin-left:50px; font-size:25px; font:bold; color:cadetblue">
        @Html.DisplayFor(modelItem => item.Question)
    </h2>

    <h3 style="margin-left:60px; font-size:18px; color:#808080">
        @Html.DisplayFor(modelItem => item.Answer)
    </h3>

    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admins"))
        {
            <p style="margin-bottom:50px; margin-left:70px; ">
                <button class="btn btn-default"  style="margin-left:70px;">
                    @Html.ActionLink("Edit", "EditFAQ", new { id = item.FAQ_ID })
                </button>

                <button class="btn btn-default" style="margin-left:50px">
                    @Html.ActionLink("Delete", "DeleteFAQ", new { id = item.FAQ_ID })
                </button>
            </p>
            <hr />

        }
    }


}



@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admins"))
    {
        <button class="btn btn-default" style="margin-left:600px; margin-bottom:100px; margin-top:50px;width:200px">
            @Html.ActionLink("Create New FAQ", "AddFAQ")
        </button>

    }
}





